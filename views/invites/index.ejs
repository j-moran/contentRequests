<% include ../partials/header %>
<% include ../partials/sidebar %>

<div class="card w-50 mx-auto">
	<form class="card-body text-center" method="POST" action="/<%= prefix %>/invite">
		<h2 class="text-center">Invite:</h2>
		<hr>

		<div class="form-group row">
			<label class="col-2 control-label" for="email">Email: </label>
			<input class="col-7 form-control mx-auto" type="text" name="email" placeholder="Enter invitee email...">
		</div>

		<div class="form-group row">
			<a href="/<%= prefix %>/dashboard" class="btn btn-lg btn-dark col-5 mx-auto">Return to Dashboard</a>
			<button class="btn btn-dark btn-lg col-5 mx-auto">Send Invite</button>
		</div>
	</form>
</div>

<% include ../partials/footer %>