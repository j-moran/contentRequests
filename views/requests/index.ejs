<% include ../partials/header %>
<% include ../partials/sidebar %>

<div class="card">
	<div class="card-body">
		<h1><span>My Requests:</span></h1>
	</div>	
</div>

<hr>

<div class="card">
	<div class="card-body">
		<h2>Manga and Light Novels:</h2>
		<hr>
		<div class="row col-9 mx-auto text-center">
			<span class="col mx-2">Title</span>
			<span class="col mx-2">Time Created</span>
			<span class="col-2 mx-2">Info Link</span>
			<span class="col mx-2">Requester</span>
		</div>
		<hr>

		<% requests.forEach(function(request){ %>
			<div class="row my-2 col-9 mx-auto text-center">
				<span class="col mx-2"><%= request.title %></span>
				<span class="col mx-2"><%= request.dateCreated %></span>
				<a class="col-2 btn btn-lg btn-secondary mx-2" href="<%= request.link %>">Info</a>
				<% if(currentUser.username == 'admin'){ %>
					<span class="col mx-2"><%= request.requester.username %></span>
				<% }; %>
			</div>
		<% }); %>
	</div>	
</div>

<hr>

