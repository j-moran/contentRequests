<% include ../partials/header %>
<% include ../partials/sidebar %>

<div class="container-fluid">
	
	<% if(typeof query != "undefined"){ %>
		<div class="card">
			<div class="row">
				<img class="col-2" src=<%= query.imageURL %>>
				<div class="col">
					<p>Title: <%= query.title %></p>	
					<p>Type: <%= query.type %></p>
					<p>Synopsis: <%= query.synopsis %></p>
					<div class="">
						<% if((query.type == 'Manga') || (query.type == 'Novel')){ %>
							<a class="btn btn-info" href="https://myanimelist.net/manga/<%= query.id %>" target="_blank">MAL</a>
						<% }; %>
						
						<a class="btn btn-primary" href="#">Request</a>
					</div>
				</div>
			</div>
		</div>
	<% }; %>

	<hr>

	<h3>Recommendations from other users who read "<%= query.title %>":</h3>
	<div class="row">
		<% if(typeof recs != "undefined"){ %>
			<% if(recs.length > 0 ){ %>
				<% for(var i = 0; i < (recs.length < 6 ? recs.length : 6); i++){ %>
					<div class="col-2">
						<div class="card">
							<img class="img-thumbnail recImg card-img-top" src=<%= recs[i].image_url %>>
							<div class="card-body">
								<p class="card-title">Title: <a href="/request/show?id=<%= recs[i].mal_id %>" ><%= recs[i].title %></a></p>	
								<p class="card-text">Type: <%= recs[i].type %></p>
							</div>
						</div>
					</div>
				<% }; %>
			<% } else { %>
				<p class="col">There are no recommendations available at this time.</p>
			<% }; %>
		<% }; %>
	</div>
	
	<hr>
	<br>

	<button class="btn btn-secondary">Return to request page</button>

</div>
<% include ../partials/footer %>