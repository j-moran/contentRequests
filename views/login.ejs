				<label class="control-label">Password:</label>
				<input class="col-9 form-control mx-auto" type="password" name="password" placeholder="Enter password:">
			</div>
			<div class="form-group">
				<button class="btn btn-dark btn-lg col-4 mx-1">Log In</button>
				<a class="btn btn-secondary btn-lg col-4 mx-1" href="/register">Register</a>
			</div>
		</form>
	</div>

