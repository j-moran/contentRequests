	<div class="card w-50 mx-auto">
		<form class="card-body mx-aut text-center" action="/login" method="post">
			<div class="form-group">
				<label class="control-label">Username:</label>
				<input class="col-9 form-control mx-auto" type="text" name="username" placeholder="Enter Username:" autofocus required>
			</div>
