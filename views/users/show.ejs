<% include ../partials/header %>
<% include ../partials/sidebar %>

<div class="card">
	<div class="card-body">
		<h1 class="text-center">Manage Users</h1>
	</div>
</div>

<hr>

<div class="card w-50 mx-auto">
	<div class="card-body">
		<form class="">
			<div class="form-group w-50 row mx-auto">
				<label class="col form-label mx-auto" for="username">Username:</label>
				<input class="col form-control mx-auto" type="text" name="username" placeholder="Enter username..." autofocus>
				<button class="btn btn-dark btn-lg col offset-1 mx-auto">Find User</button>
			</div>
		</form>
	</div>
</div>

<hr>

<% if(typeof user != 'undefined'){ %>
	<div class="card w-50 mx-auto">
		<div class="card-body">
			<p><%= user.username %></p>
			<form action="/<%= prefix %>/users/delete">
				<input type="hidden" name="userId" value="<%= user.id %>">
				<button class="btn btn-dark btn-lg col offset-1 mx-auto">Delete User</button>
			</form>
		</div>		
	</div>
<% }; %>

<a href="/<%= prefix %>/dashboard" class="btn btn-lg btn-dark col-3 mx-auto">Return to Dashboard</a>	

<% include ../partials/footer %>